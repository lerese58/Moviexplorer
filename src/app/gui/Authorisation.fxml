<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="200.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.gui.AuthorisationController">
    <children>
        <Label layoutX="30.0" layoutY="22.0" text="Please, log into your account:">
            <font>
                <Font name="Helvetica Neue Bold" size="17.0" />
            </font>
        </Label>
      <Button fx:id="regIn" alignment="CENTER" layoutX="218.0" layoutY="152.0" mnemonicParsing="false" onAction="#register" text="Register" AnchorPane.bottomAnchor="19.0" AnchorPane.rightAnchor="17.0">
         <font>
            <Font size="13.0" />
         </font></Button>
        <Button fx:id="submit" alignment="CENTER" layoutX="31.0" layoutY="152.0" onAction="#submit" prefHeight="9.0" prefWidth="62.0" text="Log in" textOverrun="CLIP">
            <font>
                <Font name="Helvetica Neue" size="13.0" />
            </font>
        </Button>
        <TextField fx:id="login" layoutX="31.0" layoutY="59.0" prefHeight="27.0" prefWidth="197.0" promptText="Login" />
        <PasswordField fx:id="password" layoutX="31.0" layoutY="100.0" prefHeight="27.0" prefWidth="197.0" promptText="Password" />
        <Label fx:id="message" layoutX="31.0" layoutY="130.0" prefHeight="20.0" prefWidth="163.0">
            <font>
                <Font name="Helvetica Neue" size="13.0" />
            </font>
        </Label>
      <Button fx:id="logOutBtn" alignment="CENTER" layoutX="124.0" layoutY="154.0" mnemonicParsing="false" onAction="#onLogOut" text="Log out" visible="false">
         <font>
            <Font size="13.0" />
         </font>
      </Button>
    </children>
</AnchorPane>
